---
const contactInfo = {
  email: "toscanotoro10@gmail.com",
  github: "https://github.com/yourusername",
  linkedin: "https://linkedin.com/in/yourusername",
  location: "Chimalhuacán, Estado de México"
};
---

<section id="contact" class="py-20">
  <div class="container mx-auto px-4">
    <h2 class="text-4xl font-bold mb-12 text-center">
      <span class="relative inline-block">
        Contacto
        <span class="absolute -bottom-2 left-0 w-full h-1 bg-gradient-to-r from-neon-purple to-neon-pink"></span>
      </span>
    </h2>

    <div class="grid max-w-2xl mx-auto">
      <!-- Información de contacto -->
      <div class="space-y-8">
        <div class="group relative overflow-hidden bg-deep-purple/50 backdrop-blur-sm p-8 rounded-xl
                    border border-neon-purple/20 transition-all duration-300
                    hover:shadow-[0_0_2px_#fff,inset_0_0_2px_#fff,0_0_5px_#B24BF3,0_0_15px_#B24BF3]">
          <!-- Efecto hover -->
          <div class="absolute inset-0">
            <div class="absolute inset-0 bg-gradient-to-br from-neon-purple/10 via-transparent to-neon-pink/10 
                        opacity-0 group-hover:opacity-100 transition-opacity duration-700"></div>
            <div class="absolute inset-0 bg-gradient-to-b from-white/5 via-transparent to-transparent 
                        opacity-0 group-hover:opacity-100 transition-opacity duration-700"></div>
          </div>

          <!-- Contenido -->
          <div class="relative z-10 space-y-6">
            <!-- Email -->
            <a href={`mailto:${contactInfo.email}`} 
               class="flex items-center gap-4 text-gray-300 hover:text-white transition-colors duration-300 group">
              <span class="bg-deep-purple p-3 rounded-lg group-hover:text-neon-purple transition-colors duration-300">
                <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                        d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
              </span>
              {contactInfo.email}
            </a>

            <!-- LinkedIn -->
            <a href={contactInfo.linkedin} target="_blank" rel="noopener noreferrer"
               class="flex items-center gap-4 text-gray-300 hover:text-white transition-colors duration-300 group">
              <span class="bg-deep-purple p-3 rounded-lg group-hover:text-neon-purple transition-colors duration-300">
                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                </svg>
              </span>
              LinkedIn
            </a>

            <!-- GitHub -->
            <a href={contactInfo.github} target="_blank" rel="noopener noreferrer"
               class="flex items-center gap-4 text-gray-300 hover:text-white transition-colors duration-300 group">
              <span class="bg-deep-purple p-3 rounded-lg group-hover:text-neon-purple transition-colors duration-300">
                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 0C5.37 0 0 5.37 0 12c0 5.3 3.438 9.8 8.205 11.385.6.113.82-.258.82-.577 0-.285-.01-1.04-.015-2.04-3.338.724-4.042-1.61-4.042-1.61C4.422 18.07 3.633 17.7 3.633 17.7c-1.087-.744.084-.729.084-.729 1.205.084 1.838 1.236 1.838 1.236 1.07 1.835 2.809 1.305 3.495.998.108-.776.417-1.305.76-1.605-2.665-.3-5.466-1.332-5.466-5.93 0-1.31.465-2.38 1.235-3.22-.135-.303-.54-1.523.105-3.176 0 0 1.005-.322 3.3 1.23.96-.267 1.98-.399 3-.405 1.02.006 2.04.138 3 .405 2.28-1.552 3.285-1.23 3.285-1.23.645 1.653.24 2.873.12 3.176.765.84 1.23 1.91 1.23 3.22 0 4.61-2.805 5.625-5.475 5.92.42.36.81 1.096.81 2.22 0 1.606-.015 2.896-.015 3.286 0 .315.21.69.825.57C20.565 21.795 24 17.295 24 12c0-6.63-5.37-12-12-12"/>
                </svg>
              </span>
              GitHub
            </a>

            <!-- Ubicación -->
            <div class="flex items-center gap-4 text-gray-300 group">
              <span class="bg-deep-purple p-3 rounded-lg group-hover:text-neon-purple transition-colors duration-300">
                <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                        d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                        d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
              </span>
              {contactInfo.location}
            </div>
          </div>
        </div>
      </div>
    </div>