<div 
  id="loading-screen"
  class="fixed inset-0 z-50 bg-deep-purple/90 backdrop-blur-sm
         flex items-center justify-center
         opacity-0 pointer-events-none
         transition-opacity duration-300"
>
  <div class="relative">
    <!-- Círculo exterior -->
    <div class="w-16 h-16 border-4 border-neon-purple rounded-full
                animate-[spin_2s_linear_infinite]"></div>
    
    <!-- Círculo interior con gradiente -->
    <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2
                w-12 h-12 border-4 border-t-neon-pink border-r-transparent 
                border-b-neon-violet border-l-transparent rounded-full
                animate-[spin_1.5s_linear_infinite_reverse]"></div>
    
    <!-- Punto central -->
    <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2
                w-2 h-2 bg-white rounded-full
                animate-[pulse_1s_ease-in-out_infinite]"></div>
  </div>
</div>

<script>
  const loadingScreen = document.getElementById('loading-screen');
  let isLoading = false;

  function showLoading() {
    if (loadingScreen && !isLoading) {
      isLoading = true;
      loadingScreen.classList.remove('opacity-0', 'pointer-events-none');
    }
  }

  function hideLoading() {
    if (loadingScreen && isLoading) {
      isLoading = false;
      loadingScreen.classList.add('opacity-0', 'pointer-events-none');
    }
  }

  // Mostrar loading en cambios de sección
  document.querySelectorAll('a[href^="#"]').forEach(anchor => {
    anchor.addEventListener('click', () => {
      showLoading();
      setTimeout(hideLoading, 500); // Simular carga
    });
  });
</script>

<style>
  @keyframes spin {
    to {
      transform: rotate(360deg);
    }
  }
</style>