---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import ProjectsSection from '../components/ProjectsSection.astro';
import AboutSection from '../components/AboutSection.astro';
import SkillsSection from '../components/SkillsSection.astro';
import CertificationsSection from '../components/CertificationsSection.astro';
import ContactSection from '../components/ContactSection.astro';
import Footer from '../components/Footer.astro';
import ScrollToTop from '../components/ScrollToTop.astro';

---

<Layout title="Carlos Eduardo Toscano - Portfolio">
  <Header />
  
  <main class="container mx-auto px-4">
    <!-- Hero Section -->
    <section class="min-h-screen flex flex-col justify-center gap-8 py-20">
      <!-- Hero Section -->
      <div class="container mx-auto grid md:grid-cols-2 gap-8 items-center px-4">
        <div class="space-y-8">
          <div>
            <h1 class="text-5xl md:text-7xl font-bold leading-tight">
              <span class="bg-gradient-to-r from-neon-pink via-neon-purple to-neon-violet bg-clip-text text-transparent">
                Carlos Eduardo
              </span>
              <br />
              <span class="text-white">Toscano Sarabio</span>
            </h1>
            <p class="mt-4 text-xl text-gray-300">
              Ingeniero en Sistemas Computacionales
            </p>
          </div>

          <div class="flex flex-col sm:flex-row gap-4">
            <a href="#projects" 
               class="group relative inline-flex items-center justify-center px-8 py-3 overflow-hidden 
                      text-lg font-medium text-white rounded-lg bg-deep-purple hover:scale-105 
                      transition-all duration-300">
              <span class="relative z-10 flex items-center gap-2">
                Ver Proyectos
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 transition-transform duration-300 group-hover:translate-x-1" 
                     fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
                </svg>
              </span>
              <div class="absolute inset-0 w-full h-full bg-gradient-to-r from-neon-purple to-neon-pink opacity-0 
                          group-hover:opacity-20 transition-opacity duration-300"></div>
            </a>
            <a href="#contact" 
               class="group relative inline-flex items-center justify-center px-8 py-3 overflow-hidden 
                      text-lg font-medium text-white rounded-lg bg-deep-purple hover:scale-105 
                      transition-all duration-300">
              <span class="relative z-10 flex items-center gap-2">
                Contacto
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 transition-transform duration-300 group-hover:translate-x-1" 
                     fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
              </span>
              <div class="absolute inset-0 w-full h-full bg-gradient-to-r from-neon-purple to-neon-pink opacity-0 
                          group-hover:opacity-20 transition-opacity duration-300"></div>
            </a>
          </div>

          <div class="flex gap-4">
            <a href="https://github.com/yourusername" target="_blank" rel="noopener" 
               class="text-gray-400 hover:text-neon-purple transition-colors duration-300">
              <svg class="w-8 h-8" fill="currentColor" viewBox="0 0 24 24"><path d="M12 0C5.37 0 0 5.37 0 12c0 5.3 3.438 9.8 8.205 11.385.6.113.82-.258.82-.577 0-.285-.01-1.04-.015-2.04-3.338.724-4.042-1.61-4.042-1.61C4.422 18.07 3.633 17.7 3.633 17.7c-1.087-.744.084-.729.084-.729 1.205.084 1.838 1.236 1.838 1.236 1.07 1.835 2.809 1.305 3.495.998.108-.776.417-1.305.76-1.605-2.665-.3-5.466-1.332-5.466-5.93 0-1.31.465-2.38 1.235-3.22-.135-.303-.54-1.523.105-3.176 0 0 1.005-.322 3.3 1.23.96-.267 1.98-.399 3-.405 1.02.006 2.04.138 3 .405 2.28-1.552 3.285-1.23 3.285-1.23.645 1.653.24 2.873.12 3.176.765.84 1.23 1.91 1.23 3.22 0 4.61-2.805 5.625-5.475 5.92.42.36.81 1.096.81 2.22 0 1.606-.015 2.896-.015 3.286 0 .315.21.69.825.57C20.565 21.795 24 17.295 24 12c0-6.63-5.37-12-12-12"/></svg>
            </a>
            <a href="https://linkedin.com/in/yourusername" target="_blank" rel="noopener"
               class="text-gray-400 hover:text-neon-purple transition-colors duration-300">
              <svg class="w-8 h-8" fill="currentColor" viewBox="0 0 24 24"><path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/></svg>
            </a>
          </div>
        </div>

        <div class="relative hidden md:block">
          <!-- Card con info resaltada -->
          <div class="group relative">
            <div class="absolute top-10 -right-10 overflow-hidden bg-deep-purple/50 backdrop-blur-sm p-6 rounded-2xl border border-neon-purple/20
                        transform rotate-6 hover:rotate-0 transition-all duration-300 cursor-pointer">
              <div class="absolute inset-0 overflow-hidden">
                <div class="absolute inset-0 bg-gradient-to-r from-transparent via-white/5 to-transparent 
                            translate-x-[-200%] group-hover:translate-x-[200%] 
                            transition-transform duration-1000 ease-in-out"></div>
              </div>
              <div class="relative z-10">
                <h3 class="text-neon-pink font-bold text-xl mb-2">Web Development</h3>
                <p class="text-gray-300">Desarrollo Frontend con React y Next.js</p>
              </div>
            </div>
          </div>
          
          <div class="group relative">
            <div class="absolute bottom-10 -left-10 overflow-hidden bg-deep-purple/50 backdrop-blur-sm p-6 rounded-2xl border border-neon-pink/20
                        transform -rotate-6 hover:rotate-0 transition-all duration-300 cursor-pointer">
              <div class="absolute inset-0 overflow-hidden">
                <div class="absolute inset-0 bg-gradient-to-r from-transparent via-white/5 to-transparent 
                            translate-x-[-200%] group-hover:translate-x-[200%] 
                            transition-transform duration-1000 ease-in-out"></div>
              </div>
              <div class="relative z-10">
                <h3 class="text-neon-purple font-bold text-xl mb-2">Machine Learning</h3>
                <p class="text-gray-300">Experiencia en NLP y sistemas de clasificación</p>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Skills Preview -->
      <!-- Skills Preview -->
      <div class="container mx-auto px-4 mt-20">
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
          {[
            { name: 'Python', icon: 'python', color: 'neon-purple' },
            { name: 'Machine Learning', icon: 'tensorflow', color: 'neon-pink' },
            { name: 'React', icon: 'react', color: 'neon-violet' },
            { name: 'Next.js', icon: 'nextdotjs', color: 'neon-purple' },
            { name: 'Django', icon: 'django', color: 'neon-pink' },
            { name: 'PHP', icon: 'php', color: 'neon-violet' },
            { name: 'MySQL', icon: 'mysql', color: 'neon-purple' },
            { name: 'HTML', icon: 'html5', color: 'neon-pink' }
          ].map((skill) => (
            <div class="group relative">
              <!-- Efecto holográfico -->
              <div class="absolute inset-0 overflow-hidden">
                <div class="absolute inset-0 bg-gradient-to-r from-transparent via-white/5 to-transparent 
                            translate-x-[-200%] animate-none group-hover:translate-x-[200%] 
                            transition-transform duration-1000 ease-in-out"></div>
              </div>
              
              <div class="relative bg-deep-purple/50 backdrop-blur-sm p-4 rounded-lg border border-neon-purple/20
                          hover:border-neon-purple/50 transition-all duration-300 overflow-hidden
                          hover:shadow-[0_0_2px_#fff,inset_0_0_2px_#fff,0_0_5px_#B24BF3,0_0_15px_#B24BF3]">
                <div class="flex items-center justify-center gap-2">
                  <img 
                    src={`https://unpkg.com/simple-icons@v8/icons/${skill.icon}.svg`} 
                    class={`w-6 h-6 text-${skill.color}`}
                    style="filter: invert(1);"
                    alt={skill.name}
                  />
                  <h4 class="text-center text-gray-300 group-hover:text-white transition-colors duration-300">
                    {skill.name}
                  </h4>
                </div>
                
                <!-- Efecto de brillo en hover -->
                <div class="absolute inset-0 bg-gradient-to-r from-neon-purple/0 via-neon-purple/10 to-neon-purple/0 
                            opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
              </div>
            </div>
          ))}
        </div>
      </div>
          </section>
    
    <AboutSection />
    <SkillsSection />
    <CertificationsSection />
    <ProjectsSection />
    <ContactSection />
    <Footer />
  </main>
  <ScrollToTop />
</Layout>